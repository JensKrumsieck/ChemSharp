{
  "compilerOptions": {
    "strict": false,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true,
    "typeRoots": [ "node_modules/@types/" ]
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}
